@model Faculty

<h1>Xoá khoa</h1>

<hr />

<partial name="_AlertBag" />

<div>
    <h4>Xác nhận xoá?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="padding-bottom:10px">Họ tên</dt>
        <dd class="col-sm-10">@Model?.Ten</dd>

        <dt class="col-sm-2" style="padding-bottom:10px">Mô tả</dt>
        <dd class="col-sm-10">@Model?.MoTa</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xác nhận" class="btn btn-danger" /> | 
        <partial name="Btn-Back" />
    </form>
</div>
