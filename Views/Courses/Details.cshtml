@model Course

<h1>Thông tin chi tiết</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên môn học</dt>
        <dd class="col-sm-10">@Model?.Ten</dd>

        <dt class="col-sm-2">Số tín chỉ</dt>
        <dd class="col-sm-10">@Model?.TinChi</dd>

        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model?.MoTa</dd>
        
        <dt class="col-sm-2">Khoa</dt>
        <dd class="col-sm-10">@Model?.Faculty.Ten</dd>

    </dl>
</div>

<div>
    <partial name="Btn-Edit" model="@Model" /> |
    <partial name="Btn-Back" />
</div>