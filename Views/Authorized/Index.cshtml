@model LoginViewModel
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/QLHocSinh_LT.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

</head>
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-5">
                <div class="wrap">
                    <div class="img" style="background-image: url('images/bg-1.png'); background-size: cover; background-position: center;"></div>
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-50">
                                <h3 class="mb-4">Sign In</h3>
                            </div>
                        </div>
                        <form asp-action="Login" method="post" class="signin-form">
                            <div class="form-group mt-3">
                                <input asp-for="Username" class="form-control" required>
                                <label class="form-control-placeholder" for="Username">Username</label>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input id="password-field" asp-for="Password" type="password" class="form-control" required>
                                <label class="form-control-placeholder" for="Password">Password</label>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-60 text-left">
                                    <label class="checkbox-wrap checkbox-primary mb-0">
                                        <input asp-for="RememberMe" type="checkbox" class="form-check-input">
                                        Remember Me
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-60 text-sm-right" style="font-size=medium">
                                    <a href="#">Forgot Password</a>
                                </div>
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
