@model StudentsListViewModel
<h2>Danh sách học sinh</h2>
<p>
    <a asp-action="Create" class="btn btn-success">Thêm học sinh mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Họ tên</th>
            <th>Giới tính</th>
            <th>Ngày sinh</th>
            <th>Lớp học</th>
            <th>Điểm TB</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model?.Students ?? Enumerable.Empty<Student>())
        {
            <tr>
                <td>
                    @item.HoTen
                </td>
                <td>
                    @item.GioiTinh
                </td>
                <td>
                    @item.NgaySinh.ToShortDateString()
                </td>
                <td>
                    @item.LopHoc
                </td>
                <td>
                    @item.DiemTrungBinh
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Sửa</a> | 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Xem</a> | 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="PagingBtn" />
