@model IEnumerable<Course>

@{
    ViewData["Title"] = "Select Course";
}

<h1>Select Course</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Course Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => course.Ten)
                </td>
                <td>
                    <a asp-action="Index" asp-route-courseId="@course.Id" class="btn btn-primary">Select</a>
                </td>
            </tr>
        }
    </tbody>
</table>
