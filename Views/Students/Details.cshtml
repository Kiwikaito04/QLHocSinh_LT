@model Student

<h1>Thông tin chi tiết</h1>

<div>
    <h4>@Model?.HoTen</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">Giới tính</dt>
        <dd class="col-sm-10">@Model?.GioiTinh</dd>

        <dt class="col-sm-2">Ngày sinh</dt>
        <dd class="col-sm-10">@Model?.NgaySinh</dd>

        <dt class="col-sm-2">Địa chỉ</dt>
        <dd class="col-sm-10">@Model?.DiaChi</dd>

        <dt class="col-sm-2">Lớp học</dt>
        <dd class="col-sm-10">@Model?.LopHoc</dd>
        
        <dt class="col-sm-2">Điểm trung bình</dt>
        <dd class="col-sm-10">@Model?.DiemTrungBinh</dd>

    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Sửa</a> | 
    <a asp-action="Index" class="btn btn-secondary">Quay về</a>
</div>