@model StudentsListViewModel
<table class="table">
    <tr>
        <th>
            Họ tên
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Lớp học
        </th>
        <th>
            Diểm TB
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model?.Students ?? Enumerable.Empty<Student>())
    {
        <tr>
            <td>
                @item.HoTen
            </td>
            <td>
                @item.GioiTinh
            </td>
            <td>
                @item.NgaySinh.ToShortDateString()
            </td>
            <td>
                @item.LopHoc
            </td>
            <td>
                @item.DiemTrungBinh
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "ChinhSuaThongTinHocSinh", new { id = item.Id }) |
                @Html.ActionLink("Xem chi tiết", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        <form asp-action=""></form>
    }

</table>
<div page-model="@Model?.PagingInfo" page-action="Index"></div>
